{
  "name": "bloom",
  "version": "1.0.0",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "prepare": "husky install",
    "build:dev": "npx eas-cli@latest build --profile development",
    "build:preview": "npx eas-cli@latest build --profile preview",
    "build:prod": "npx eas-cli@latest build --profile production"
  },
  "dependencies": {
    "@react-native-community/datetimepicker": "7.2.0",
    "@react-navigation/bottom-tabs": "^6.5.8",
    "@react-navigation/drawer": "^6.6.3",
    "@react-navigation/material-top-tabs": "^6.6.3",
    "@react-navigation/native": "^6.1.7",
    "@react-navigation/native-stack": "^6.9.13",
    "expo": "~49.0.8",
    "expo-splash-screen": "~0.20.5",
    "expo-status-bar": "~1.6.0",
    "expo-updates": "~0.18.16",
    "react": "18.2.0",
    "react-native": "0.72.5",
    "react-native-gesture-handler": "~2.12.0",
    "react-native-pager-view": "6.2.0",
    "react-native-reanimated": "~3.3.0",
    "react-native-safe-area-context": "4.6.3",
    "react-native-screens": "~3.22.0",
    "react-native-svg": "13.9.0",
    "react-native-tab-view": "^3.5.2",
    "react-native-uuid": "^2.0.1",
    "expo-sqlite": "~11.3.3",
    "expo-image-picker": "~14.3.2",
    "react-native-maps": "1.7.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@types/react": "~18.2.14",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "eslint": "^8.48.0",
    "eslint-config-universe": "^12.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "react-native-svg-transformer": "^1.1.0",
    "typescript": "^5.1.3"
  },
  "private": true,
  "eslintConfig": {
    "extends": "universe/native",
    "rules": {
      "no-unused-vars": "error"
    },
    "globals": {
      "__dirname": true
    }
  },
  "lint-staged": {
    "{*.js,*.ts,*.tsx}": "eslint --fix",
    "{*.svg,*.html}": "prettier --write"
  }
}
